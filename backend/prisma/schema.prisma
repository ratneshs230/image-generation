// Prisma schema for Image Editing Game

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  username      String    @unique
  displayName   String?
  avatarUrl     String?
  provider      String    // 'google' or 'github'
  providerId    String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  hostedRooms   GameRoom[]  @relation("RoomHost")
  participations RoomParticipant[]
  turns         GameTurn[]
  statistics    UserStatistics?

  @@unique([provider, providerId])
  @@index([email])
  @@index([username])
}

// User statistics for tracking game history
model UserStatistics {
  id              String   @id @default(uuid())
  userId          String   @unique
  gamesPlayed     Int      @default(0)
  gamesHosted     Int      @default(0)
  gamesWon        Int      @default(0)
  totalTurns      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Game room model
model GameRoom {
  id              String      @id @default(uuid())
  code            String      @unique // 6-character room code
  name            String
  hostId          String
  status          RoomStatus  @default(WAITING)
  maxPlayers      Int         @default(8)
  maxTurns        Int         @default(10)
  currentTurn     Int         @default(0)
  currentPlayerId String?
  currentImageUrl String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  endedAt         DateTime?

  // Relations
  host            User        @relation("RoomHost", fields: [hostId], references: [id])
  participants    RoomParticipant[]
  turns           GameTurn[]

  @@index([code])
  @@index([status])
}

// Room participant (join table with extra data)
model RoomParticipant {
  id          String    @id @default(uuid())
  roomId      String
  userId      String
  joinedAt    DateTime  @default(now())
  leftAt      DateTime?
  turnOrder   Int       // Order in which player takes turns
  isActive    Boolean   @default(true)

  room GameRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
}

// Game turn model - stores each image edit
model GameTurn {
  id            String      @id @default(uuid())
  roomId        String
  playerId      String
  turnNumber    Int
  prompt        String
  inputImageUrl String?     // null for first turn if generating from scratch
  outputImageUrl String
  processingTime Int?       // milliseconds
  createdAt     DateTime    @default(now())

  room   GameRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  player User     @relation(fields: [playerId], references: [id])

  @@index([roomId])
  @@index([playerId])
  @@index([roomId, turnNumber])
}

// Content moderation log
model ModerationLog {
  id          String    @id @default(uuid())
  roomId      String?
  userId      String?
  prompt      String
  flagged     Boolean
  reason      String?
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([roomId])
}

// Room status enum
enum RoomStatus {
  WAITING     // Waiting for players
  IN_PROGRESS // Game is active
  COMPLETED   // Game finished normally
  CANCELLED   // Game was cancelled
}
