# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/image_game_db

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-in-production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# Banana API (Gemini Nano)
BANANA_API_KEY=your-banana-api-key
BANANA_MODEL_KEY=gemini-nano

# Redis (for session store and caching - optional)
REDIS_URL=redis://localhost:6379

# Content Moderation
ENABLE_CONTENT_MODERATION=true
MODERATION_API_KEY=optional-moderation-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
